<?xml version="1.0" encoding="UTF-8"?>
<template-definition version="1.0" xmlns="http://www.polopoly.com/polopoly/cm/app/xml">

  <input-template name="it.conquiste.RssElement" label="it.conquiste.RssElement.label">

    <type>LayoutElement</type>

    <policy>com.atex.plugins.baseline.policy.BaselinePolicy</policy>
    <editor>com.polopoly.cm.app.widget.OTopPolicyWidget</editor>
    <viewer>com.polopoly.cm.app.widget.OTopPolicyWidget</viewer>

    <param name="ViewState_insert">false</param>
    <param name="EditState_saveAndClose">true</param>
    <param name="EditState_saveAndInsert">false</param>
    <param name="EditState_saveAndFastInsert">false</param>
    <param name="EditState_saveAndView">true</param>
    <param name="EditNewState_saveAndClose">false</param>
    <param name="EditNewState_saveAndInsert">false</param>
    <param name="EditNewState_saveAndFastInsert">true</param>
    <param name="EditNewState_saveAndView">false</param>
    <param name="renderTemplateIconInSelect">true</param>

    <editor contextName="orchid_TOCENTRY">com.polopoly.siteengine.standard.contentlist.OContentListEntryBasePolicyWidget</editor>
    <viewer contextName="orchid_TOCENTRY">com.polopoly.siteengine.standard.contentlist.OContentListEntryBasePolicyWidget</viewer>

    <field name="name" input-template="p.ContentName" label="cm.label.Name" required="true">
      <param name="inlineHelp">true</param>
    </field>
    <field name="url" input-template="p.TextInput" label="it.conquiste.RssElement.URL.label" required="true">
      <param name="maxlength">250</param>
      <param name="size">150</param>
    </field>
    <field name="other" input-template="p.TextInput" label="it.conquiste.RssElement.other.label" required="true">
      <param name="maxlength">250</param>
      <param name="size">150</param>
    </field>

    <output-templates mode="www">
      <id>it.conquiste.RssElement.ot</id>
    </output-templates>
  </input-template>
  <output-template name="it.conquiste.RssElement.ot" input-template="p.siteengine.ElementOutputTemplate">
    <content-xml>
      <component group="output/modelKeyMode" name="selected">no-cache</component>
      <contentref group="output/renderer" name="selected">
        <contentid>
          <externalid>p.siteengine.VelocityFileRenderer</externalid>
        </contentid>
      </contentref>
      <component group="output/renderer/selected/defaultVelocityViewFileName" name="value">/WEB-INF/velocity/it.conquiste.rsselement.vm</component>
      <contentref group="output/controller" name="selected">
        <contentid>
          <externalid>p.siteengine.JavaClassRenderController</externalid>
        </contentid>
      </contentref>
      <component group="output/controller/selected/renderControllerClass" name="value">it.conquiste.cm.rss.RenderControllerRssElement</component>
    </content-xml>
  </output-template>

</template-definition>
