<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_1.xsd"
              id="WebAppFragment_ID"
              version="3.1">

  <name>personalization-fragment</name>

  <context-param>
    <param-name>cmservlet_ignore.personalization</param-name>
    <param-value>personalization</param-value>
  </context-param>

  <servlet>
    <servlet-name>Personalization</servlet-name>
    <servlet-class>com.atex.plugins.personalization.servlet.Servlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Personalization</servlet-name>
    <url-pattern>/personalization</url-pattern>
  </servlet-mapping>

</web-fragment>
