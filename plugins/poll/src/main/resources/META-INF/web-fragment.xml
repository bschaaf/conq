<?xml version="1.0" encoding="UTF-8"?>
<web-fragment metadata-complete="true" version="3.0"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">
  <display-name>Poll</display-name>

  <context-param>
    <param-name>cmservlet_ignore.poll</param-name>
    <param-value>poll</param-value>
  </context-param>
  <servlet>
    <servlet-name>poll</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.atex.plugins.poll</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>poll</servlet-name>
    <url-pattern>/poll/*</url-pattern>
  </servlet-mapping>
</web-fragment>

